<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div class="form-div">
    <p>All fields are required.</p>
    <form class="form" action="/" method="post">
        <label for="classification_name">Classification:</label>
        <select name="classification_name" id ="classification_name" required value="<%= locals.classification_name %>">
            <option value="1">Cars</option>
            <option value="2">Trucks</option>
         </select>
        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>">
        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>">
        <label for="inv_year">Year:</label>
        <input type="text" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>">
        <label for="inv_description">Description:</label>
        <input type="text" name="inv_description" id ="inv_description" required value="<%= locals.inv_description %>">
        <label for="inv_image">Image:</label>
        <input type="text" name="inv_image" required value="<%= locals.inv_image %>">
        <label for="inv_thumbnail">Thumbnail:</label>
        <input type="text" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>">
        <label for="inv_price">Price:</label>
        <input type="text" name="inv_price" required value="<%= locals.inv_price %>">
        <label for="inv_miles">Miles:</label>
        <input type="text" name="inv_miles" required value="<%= locals.inv_miles %>">
        <label for="inv_color">Color:</label>
        <input type="text" name="inv_color" required value="<%= locals.inv_color %>">
        <input type="submit" value="Submit">
    </form>
    </div>