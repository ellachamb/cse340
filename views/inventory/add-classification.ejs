<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div class="form-div">
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    <p>Please enter the classification you want to add.</p>
    <form class="form" action="/inv/add-classification" method="post">
        <label for="classification-name">Classification Name:</label>
        <p><i>Name must be alphabetic characters only. No spaces or special characters</i></p>
        <input type="classification_name" name="classification_name" id ="classification_name" required pattern="^[a-zA-Z]+$" value="<%= locals.classification_name %>">
        
        <input type="submit" value="Submit">
    </form>
    </div>