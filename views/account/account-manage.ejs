<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<h2>Welcome <%- locals.accountData.account_firstname %></h2>
<% if (locals.accountData.account_type === "Employee") { %>
    <p class = "add-button"><a href="/inv/">Inventory Management</a></p>
  <% } %>
  <p class="add-button"><a href="/account/update/<%= locals.accountData.account_id %>">Account Update Information</a></p>
<% if (locals.accountData.account_type === "Admin") { %>
    <p class = "add-button"><a href="/inv/approve">Approve New Items</a></p>
  <% } %>